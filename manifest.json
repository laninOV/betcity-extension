{
  "manifest_version": 3,
  "name": "Tennis Analysis Pro",
  "version": "1.0",
  "description": "Анализ матчей по настольному теннису",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Анализировать матч"
  },
  "content_scripts": [
    {
      "matches": ["https://betcity.ru/*", "https://*.betcity.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
