{
  "manifest_version": 3,
  "name": "Betcity Strength Calculator",
  "version": "1.0",
  "description": "Мгновенный расчёт силы игроков по последним играм",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://betcity.ru/ru/mstat/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Рассчитать силу"
  }
}
