{
  "manifest_version": 3,
  "name": "Betcity Extension",
  "version": "1.0",
  "description": "Анализ матчей на Betcity",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Анализировать"
  },
  "content_scripts": [
    {
      "matches": ["https://betcity.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
